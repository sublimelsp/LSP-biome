{
  "contributions": {
    "settings": [
      {
        "file_patterns": [
          "/LSP-biome.sublime-settings"
        ],
        "schema": {
          "$id": "sublime://settings/LSP-biome",
          "definitions": {
            "PluginConfig": {
              "properties": {
                "settings": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "biome.configurationPath": {
                      "type": [
                        "string",
                        "null"
                      ],
                      "default": null,
                      "markdownDescription": "Specifies the path to a custom Biome configuration file within the workspace folder.\n\nIf set to `null`, the extension will fall back to the default Biome configuration files.",
                    },
                    "biome.lspBin": {
                      "type": [
                        "string",
                        "null"
                      ],
                      "default": null,
                      "markdownDescription": "The biome lsp server executable. If the path is relative, the workspace folder will be used as base path."
                    },
                    "biome.requireConfiguration": {
                      "type": "boolean",
                      "default": false,
                      "markdownDescription": "Require a Biome configuration file to enable Biome features in the context to which this setting applies.\n\nIf set to `true`, the extension will not provide Biome features unless a configuration file is present in the workspace folder.",
                      "scope": "resource"
                    },
                  }
                }
              }
            }
          },
          "type": "object",
          "allOf": [
            {
              "$ref": "sublime://settings/LSP-plugin-base"
            },
            {
              "$ref": "sublime://settings/LSP-biome#/definitions/PluginConfig"
            }
          ]
        }
      },
      {
        "file_patterns": [
          "/*.sublime-project"
        ],
        "schema": {
          "properties": {
            "settings": {
              "properties": {
                "LSP": {
                  "properties": {
                    "LSP-biome": {
                      "$ref": "sublime://settings/LSP-biome#/definitions/PluginConfig"
                    }
                  }
                }
              }
            }
          }
        }
      },
      {
        "file_patterns": [
          "LSP.sublime-settings"
        ],
        "schema": {
          "properties": {
            "lsp_code_actions_on_save": {
              "properties": {
                "source.fixAll.biome": {
                  "type": "boolean"
                },
                "source.organizeImports.biome": {
                  "type": "boolean"
                },
                "source.biome": {
                  "type": "boolean"
                },
              }
            }
          }
        }
      },
    ]
  },
}
